# Production Environment Configuration
# Copy this file to .env.prod and update with your actual values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=nexus_db
DB_USER=postgres
DB_PASSWORD=prod_secure_password_change_me
DB_EXTERNAL_PORT=5433

# GraphQL Server Configuration
GRAPHQL_PORT=5001
GRAPHQL_SECRET=prod_graphql_secret_change_me

# MCP Server Configuration
MCP_CORS_PORT=8000
MCP_SSE_PORT=8001
MCP_SECRET=prod_mcp_secret_change_me

# Production specific
NODE_ENV=production
PYTHONUNBUFFERED=1

# Raspberry Pi SSD Storage Path
# Set this to your SSD mount point, e.g., /mnt/ssd/nexus-data
DATA_PATH=./data
